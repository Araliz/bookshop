= link_to "Add new book", new_admin_book_path, class: 'btn btn-default'
%table.table.table-condensed
  %thead
    %tr
      %th Title
      %th Author
      %th Price
      %th Action
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.price
        %td
          = link_to edit_admin_book_path(book) do
            %button.btn.btn-default
              = fa_icon "edit"
          = link_to admin_book_path(book), { method: :delete, data: { confirm: "Are you sure?" } } do
            %button.btn.btn-default
              = fa_icon "times"
= will_paginate @books, renderer: BootstrapPagination::Rails
